{
  "templates": {
    "website": {
      "nextjs-typescript-tailwind": {
        "useCreateNextApp": true,
        "priority": 1,
        "recommended": true,
        "description": "Next.js with TypeScript and Tailwind CSS (Latest Versions)"
      },
      "react-vite": {
        "useCreateVite": true,
        "priority": 2,
        "recommended": false,
        "description": "React + Vite with TypeScript and Tailwind CSS"
      },
      "t3-stack": {
        "useCreateT3App": true,
        "priority": 3,
        "recommended": false,
        "description": "T3 Stack (Next.js + tRPC + Prisma + NextAuth + Tailwind)"
      },
      "mern-stack": {
        "useManualScaffold": true,
        "priority": 4,
        "recommended": false,
        "description": "MERN Stack (MongoDB + Express + React + Node.js)"
      }
    },
    "mobile": {
      "expo-react-native": {
        "useCreateExpoApp": true,
        "priority": 1,
        "recommended": true,
        "description": "Expo React Native with TypeScript (StyleSheet or NativeWind)",
        "template": "tabs",
        "features": [
          "React Native + Expo SDK 52+",
          "TypeScript",
          "StyleSheet (default) or NativeWind (optional)",
          "Expo Router (File-based routing)",
          "Tab Navigation or Blank template",
          "Dark Mode Support",
          "Hot Reload",
          "Runs on iOS, Android, and Web"
        ],
        "platforms": ["ios", "android", "web"],
        "devCommand": "npx expo start"
      }
    },
    "backend": {
      "express-api": {
        "useManualScaffold": true,
        "priority": 1,
        "recommended": true,
        "description": "RESTful API with Express.js, TypeScript, and your choice of database",
        "features": [
          "Express.js 4+",
          "TypeScript",
          "JWT Authentication (optional)",
          "Prisma or Mongoose",
          "Zod Validation",
          "Swagger Documentation (optional)",
          "Docker Support (optional)",
          "Jest Testing",
          "Rate Limiting & Security"
        ],
        "devCommand": "npm run dev"
      },
      "nestjs-api": {
        "useManualScaffold": true,
        "priority": 2,
        "recommended": false,
        "description": "Enterprise-grade API with NestJS, TypeScript, and modular architecture",
        "features": [
          "NestJS 10+",
          "TypeScript",
          "Passport.js Auth (optional)",
          "Prisma or TypeORM",
          "Class Validator",
          "Swagger Auto-generation (optional)",
          "Docker Support (optional)",
          "Jest + Supertest",
          "Microservices Ready"
        ],
        "devCommand": "npm run start:dev"
      }
    }
  }
}
